<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			x:Class="TODO.Views.AddTask"
			Title="Dodaj nowe zadanie"
             BackgroundColor="White"
             >

	<StackLayout Orientation="Vertical"
				VerticalOptions="Center"
				HorizontalOptions="Center">
		<Entry x:Name="Name" Placeholder="Nazwa" Text="{Binding Name}"/>
		<Entry x:Name="Description" Placeholder="Opis" Text="{Binding Description}"/>
		<Entry x:Name="Category" Placeholder="Kategoria" Text="{Binding Category}"/>
    <Label Text="Na kiedy"/>
		<DatePicker x:Name="DeadLine" Date="{Binding DeadLine}"/>
		<Label Text="Zrobione?"/>
		<Switch x:Name="Done" IsToggled="{Binding Done}" />


		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Button Text="Zapisz"
					Grid.Column="0"
					Clicked="Save"
              BorderColor="Black"/>
      
			<Button Text="Anuluj"
					Grid.Column="1"
					Clicked="Cancel"
              BorderColor="Black"/>
		</Grid>
	</StackLayout>
</ContentPage>