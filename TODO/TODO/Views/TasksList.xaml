<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODO.Views.TasksList">

  <ListView x:Name="TasksView">
  <ListView.ItemTemplate>
    <DataTemplate>
      <ViewCell>
        <StackLayout Orientation="Vertical"
                     Padding="25.0">
          
          <Grid BackgroundColor="White" HeightRequest="10" />
            <StackLayout Orientation="Vertical" Padding="20" BackgroundColor="Lime">
              <Label Text="{Binding Name}" Font="Large"/>
              <Label Text="{Binding DeadLine}" Font="Bold" Opacity="0.6"/>
            </StackLayout>
        </StackLayout>
      </ViewCell>
    </DataTemplate>
  </ListView.ItemTemplate>
    
  </ListView>
  
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="MyToolBarItem"
                 Text="Dodaj"
                 Clicked="Add"/>
    
  </ContentPage.ToolbarItems>
</ContentPage>